---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Projects from "../components/Projects.astro";
import { projects } from "../data/projects.js";
import { schools } from "../data/schools.js";
---

<Layout title="My Projects - Barra Ihsan">
  <Navbar />
  <main class="container mx-auto px-5 sm:px-12 mt-32 md:mt-60">
    <h1 class="text-2xl md:text-5xl font-extrabold">Projects</h1>
    <p class="text-sm md:text-lg lg:text-xl mt-2">
      These are my personal projects
    </p>
    <div class="flex flex-col gap-12">
      {projects.map((project) => <Projects project={project} />)}
    </div>
  </main>
  <section class="container mx-auto px-5 sm:px-12 mt-24">
    <h2 class="text-2xl md:text-5xl font-bold">School Work</h2>
    <p class="text-sm md:text-lg lg:text-xl mt-2">
      These are the projects that I've worked on so far at my school
    </p>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      {schools.map((school) => <Projects project={school} />)}
    </div>
  </section>
  <Footer />
</Layout>
