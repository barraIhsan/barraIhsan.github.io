---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Projects from "../components/Projects.astro";

import { projects } from "../data/projects.js";
import { schools } from "../data/schools.js";

import { Icon } from "astro-icon/components";
---

<Layout title="My Projects - Barra Ihsan">
  <Navbar />
  <main class="container mx-auto px-5 sm:px-12 mt-32 md:mt-60">
    <h1 class="text-2xl md:text-5xl font-extrabold">Projects</h1>
    <p class="text-sm md:text-lg lg:text-xl mt-2">
      These are my personal projects
    </p>
    <div class="flex flex-col gap-12">
      {projects.map((project) => <Projects project={project} />)}
    </div>
  </main>
  <section class="container mx-auto px-5 sm:px-12 mt-24">
    <h2 class="text-2xl md:text-5xl font-bold">School Work</h2>
    <p class="text-sm md:text-lg lg:text-xl mt-2">
      These are the projects that I've worked on so far at my school
    </p>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      {schools.map((school) => <Projects project={school} />)}
    </div>
  </section>
  <!-- TODO: remake the website -->
  <section class="container mx-auto px-5 sm:px-12 mt-24">
    <a href="https://barraihsan.kodeintekno.com/multimedia/" target="_blank">
      <div
        class="p-8 border border-gray-600 transition-colors duration-300 hover:bg-gray-800 rounded-xl flex justify-between items-center"
      >
        <div>
          <p class="text-base sm:text-xl lg:text-3xl">
            Looking for Design (Multimedia)?
          </p>
          <p class="text-xs sm:text-base lg:text-xl">
            You can visit my other website here
          </p>
        </div>
        <Icon name="heroicons:arrow-right" class="size-8 md:size-12" />
      </div>
    </a>
  </section>
  <Footer />
</Layout>
